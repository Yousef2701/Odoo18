<odoo>
    <record id= "subscription_plan_view_tree" model= "ir.ui.view">
        <field name= "name">subscription plan tree</field>
        <field name= "model">smart.subscription.plan</field>
        <field name= "arch" type= "xml">
            <list multi_edit="1">
                <field name= "name" />
                <field name= "price" />
                <field name= "duration" />
                <field name= "active" />
            </list>
        </field>
    </record>

     <record id= "subscription_plan_view_form" model= "ir.ui.view">
        <field name= "name">subscription plan form</field>
        <field name= "model">smart.subscription.plan</field>
        <field name= "arch" type= "xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name= "name" required="1" />
                            <field name= "price" required="1" />
                            <field name= "duration" required="1" />
                        </group>
                        <group>
                            <field name= "description" required="1" />
                            <field name= "active" />
                            <field name= "feature_ids" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id= "subscription_plan_view_search" model= "ir.ui.view">
        <field name= "name">subscription plan search</field>
        <field name= "model">smart.subscription.plan</field>
        <field name= "arch" type= "xml">
            <search>
                <field name= "name" />
                <field name= "price" />
                <field name= "duration" />
                <field name= "active" />

                <filter name="is_active" string="Active Plans" domain="[('active', '=', True)]" />

                <filter name="group_duration" string="Duration" context="{'group_by': 'duration'}" />
                <filter name="group_active" string="Active" context="{'group_by': 'active'}" />
            </search>
        </field>
    </record>

    <record id="subscription_plan_action" model= "ir.actions.act_window">
        <field name= "name">subscription plan</field>
        <field name= "res_model">smart.subscription.plan</field>
    </record>

    <menuitem
        id= "subscription_plan_menu_item"
        name= "Subscription Plan"
        parent= "subscription_plan_menu"
        action= "subscription_plan_action"
    />
</odoo>