<odoo>
    <record id= "plan_feature_view_tree" model= "ir.ui.view">
        <field name= "name">plan feature tree</field>
        <field name= "model">smart.subscription.plan.feature</field>
        <field name= "arch" type= "xml">
            <list multi_edit="1">
                <field name= "name" />
                <field name= "plan_id" />
            </list>
        </field>
    </record>

    <record id= "plan_feature_view_form" model= "ir.ui.view">
        <field name= "name">plan feature form</field>
        <field name= "model">smart.subscription.plan.feature</field>
        <field name= "arch" type= "xml">
            <form>
                <sheet>
                    <group>
                        <field name= "name" required="1"/>
                        <field name= "plan_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id= "plan_feature_view_search" model= "ir.ui.view">
        <field name= "name">plan feature search</field>
        <field name= "model">smart.subscription.plan.feature</field>
        <field name= "arch" type= "xml">
            <search>
                <field name= "name" />

                <filter name="group_plan" string="Plan" context="{'group_by': 'plan_id'}" />
            </search>
        </field>
    </record>

    <record id="plan_feature_action" model= "ir.actions.act_window">
        <field name= "name">plan feature</field>
        <field name= "res_model">smart.subscription.plan.feature</field>
    </record>

    <menuitem
        id= "plan_feature_menu_item"
        name= "Plan Feature"
        parent= "plan_feature_menu"
        action= "plan_feature_action"
    />
</odoo>