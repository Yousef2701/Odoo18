<odoo>
    <record id= "customer_subscription_view_tree" model= "ir.ui.view">
        <field name= "name">customer subscription tree</field>
        <field name= "model">smart.customer.subscription</field>
        <field name= "arch" type= "xml">
            <list multi_edit="1">
                <field name= "customer_id" />
                <field name= "plan_id" />
                <field name= "start_date" />
                <field name= "end_date" />
                <field name= "state" />
            </list>
        </field>
    </record>

    <record id= "customer_subscription_view_form" model= "ir.ui.view">
        <field name= "name">customer subscription form</field>
        <field name= "model">smart.customer.subscription</field>
        <field name= "arch" type= "xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name= "customer_id" required="1" />
                            <field name= "plan_id" />
                            <field name= "state" required="1" />
                        </group>
                        <group>
                            <field name= "start_date" />
                            <field name= "end_date" />
                            <field name= "auto_renew" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id= "customer_subscription_view_search" model= "ir.ui.view">
        <field name= "name">customer subscription search</field>
        <field name= "model">smart.customer.subscription</field>
        <field name= "arch" type= "xml">
            <search>
               <field name= "customer_id" />
               <field name= "plan_id" />
               <field name= "start_date" />
               <field name= "end_date" />
               <field name= "state" />

               <filter name="is_active" string="Active Customers" domain="[('state', '=', 'active')]" />
               <filter name="is_expired" string="Expired Customers" domain="[('state', '=', 'expired')]" />
               <filter name="is_cancelled" string="Cancelled Customers" domain="[('state', '=', 'cancelled')]" />

               <filter name="group_state" string="State" context="{'group_by': 'state'}" />
               <filter name="group_plan" string="Plan" context="{'group_by': 'plan_id'}" />
            </search>
        </field>
    </record>

    <record id="customer_subscription_action" model= "ir.actions.act_window">
        <field name= "name">customer subscription</field>
        <field name= "res_model">smart.customer.subscription</field>
    </record>

    <menuitem
        id= "customer_subscription_menu_item"
        name= "Customer Subscription"
        parent= "customer_subscription_menu"
        action= "customer_subscription_action"
    />
</odoo>